<?xml version="1.0" ?>



<building name="Magma Glass Furnace" gameID="magma_glass_furnace" file="workshop.png">

	<!-- benches block -->
	<if>
		<BuildingOccupancy value="3" />
		<include file="wsFurnace.xml" />
	</if>
	<else>
		<HaveFloor/>
		<include file="wsUpperBorder.xml"/>
	</else>
	<!-- end benches block -->
 
	<!-- contents -->

	<if>
		<HaveFloor/>
		<if>
			<PositionIndex value=2 />
			<rotate>
				<sprite index = 127 />
				<sprite index = 128 />
				<sprite index = 129 />
				<sprite index = 126 />
			</rotate>
		</if>	
		
		<else>
			<PositionIndex value=6 />
			<sprite file="" index = 91 offsetx=3 offsety=-2/>
		</else>
		
		<else>
			<PositionIndex value=8 />
			<rotate>
				<sprite index = 132 offsetx=1 offsety=-3/>	
				<sprite index = 133/>	
			</rotate>
		</else>	
	</if>	
	
	<if>
		<or>
			<BuildingOccupancy value="3" />
			<not><HaveFloor/></not>
		</or>
		<empty/>
	</if>
		
	<include file="ws3x3Blueprint.xml"/>
	<include file="wsLowerBorder.xml"/>
	
</building> 