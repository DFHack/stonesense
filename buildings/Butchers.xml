<?xml version="1.0" ?>



<building name="Butchers shop" gameID="butchers_shop" file="workshop.png"> 
	
	<!-- benches block -->
	<if> 
		<!-- replace this with position index if required -->
		<and>
			<not><PositionIndex value=3 /></not>
			<BuildingOccupancy value="3" />	
		</and>
		<include file="wsBenches.xml"/>	
	</if>
	<else>
		<include file="wsUpperBorder.xml"/>
	</else>
	<!-- end benches block -->
 
	<!-- contents -->
	
	<if>
		<PositionIndex value=0 />
		<rotate>
			<empty/>
			<sprite index = 136 offsetx=-7 offsety=-4/>
			<sprite index = 136 offsetx=7 offsety=-4/>
			<empty/>
		</rotate>
	</if>
	
	<if>
		<PositionIndex value=6 />
		<rotate>
			<sprite index = 136 offsetx=7 offsety=-4/>
			<empty/>
			<empty/>
			<sprite index = 136 offsetx=-7 offsety=-4/>
		</rotate>
	</if>	

	<if>
		<and>
			<PositionIndex value=3 />
			<BuildingOccupancy value="3" />	
		</and>
		<rotate>
			<sprite index = 134 />
			<sprite index = 135 />
		</rotate>
	</if>
	
	<if>
		<and>
			<not><PositionIndex value=3 /></not>
			<BuildingOccupancy value="3" />	
		</and>
		<if>
			<PositionIndex value=2 />
			<sprite index = 139 />
		</if>
		<else>
			<PositionIndex value=5 />
			<rotate>
				<sprite index = 137 />
				<sprite index = 138 />
			</rotate>
		</else>
		<else>
			<PositionIndex value=3 />
			<rotate>
				<sprite index = 134 />
				<sprite index = 135 />
			</rotate>
		</else>
	</if>

	<include file="ws3x3Blueprint.xml"/>
	<include file="wsLowerBorder.xml"/>		
</building> 
