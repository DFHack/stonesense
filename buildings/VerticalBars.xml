<?xml version="1.0" ?>



<building name="Vertical Bars" gameID="vertical_bars" file="buildings/VerticalBars.png"> 

	<!-- straight or end pieces -->
	<if>
		<and>
			<or>
				<NeighbourSameType dir="North" />
				<NeighbourSameType dir="South" />
				<NeighbourWall dir="North" />
				<NeighbourWall dir="South" />
			</or>
			<not>
				<or>
					<NeighbourSameType dir="East" />
					<NeighbourSameType dir="West" />
					<NeighbourWall dir="East" />
					<NeighbourWall dir="West" />
				</or>
			</not>
		</and>
		<sprite index=0 />
	</if>	
	<else>
		<and>
			<or>
				<NeighbourSameType dir="East" />
				<NeighbourSameType dir="West" />
				<NeighbourWall dir="East" />
				<NeighbourWall dir="West" />
			</or>
			<not>
				<or>
					<NeighbourSameType dir="North" />
					<NeighbourSameType dir="South" />
					<NeighbourWall dir="North" />
					<NeighbourWall dir="South" />
				</or>
			</not>
		</and>
		<sprite index=1  />
	</else>
	
	<!-- Center piece -->
	<else>
		<and>
			<or>
				<NeighbourSameType dir="East" />
				<NeighbourWall dir="East" />
			</or>
			<or>
				<NeighbourSameType dir="West" />
				<NeighbourWall dir="West" />
			</or>
			<or>
				<NeighbourSameType dir="North" />
				<NeighbourWall dir="North" />
			</or>			
			<or>
				<NeighbourSameType dir="South" />
				<NeighbourWall dir="South" />
			</or>
		</and>
		<sprite index=2  />
	</else>
	
	<!-- Corners piece -->
	<else>
		<and>
			<or>
				<NeighbourSameType dir="South" />
				<NeighbourSameType dir="East" />
				<NeighbourWall dir="South" />
				<NeighbourWall dir="East" />
			</or>
			<not>
				<or>
					<NeighbourSameType dir="West" />
					<NeighbourSameType dir="North" />
					<NeighbourWall dir="West" />
					<NeighbourWall dir="North" />
				</or>
			</not>
		</and>
		<sprite index=3  />
	</else>	
		<else>
		<and>
			<or>
				<NeighbourSameType dir="South" />
				<NeighbourSameType dir="West" />
				<NeighbourWall dir="South" />
				<NeighbourWall dir="West" />
			</or>
			<not>
				<or>
					<NeighbourSameType dir="East" />
					<NeighbourSameType dir="North" />
					<NeighbourWall dir="East" />
					<NeighbourWall dir="North" />
				</or>
			</not>
		</and>
		<sprite index=4  />
	</else>	
	<else>
		<and>
			<or>
				<NeighbourSameType dir="North" />
				<NeighbourSameType dir="West" />
				<NeighbourWall dir="North" />
				<NeighbourWall dir="West" />
			</or>
			<not>
				<or>
					<NeighbourSameType dir="East" />
					<NeighbourSameType dir="South" />
					<NeighbourWall dir="East" />
					<NeighbourWall dir="South" />
				</or>
			</not>
		</and>
		<sprite index=5  />
	</else>
	<else>
		<and>
			<or>
				<NeighbourSameType dir="North" />
				<NeighbourSameType dir="East" />
				<NeighbourWall dir="North" />
				<NeighbourWall dir="East" />
			</or>
			<not>
				<or>
					<NeighbourSameType dir="West" />
					<NeighbourSameType dir="South" />
					<NeighbourWall dir="West" />
					<NeighbourWall dir="South" />
				</or>
			</not>
		</and>
		<sprite index=6  />
	</else>
	//T-Sections
	<else>
		<and>
			<or>
				<NeighbourSameType dir="South" />
				<NeighbourSameType dir="West" />
				<NeighbourSameType dir="East" />
				<NeighbourWall dir="South" />
				<NeighbourWall dir="West" />
				<NeighbourWall dir="East" />
			</or>
			<not>
				<or>
					<NeighbourSameType dir="North" />
					<NeighbourWall dir="North" />
				</or>
			</not>
		</and>
		<sprite index=7  />
	</else>	
	<else>
		<and>
			<or>
				<NeighbourSameType dir="North" />
				<NeighbourSameType dir="West" />
				<NeighbourSameType dir="East" />
				<NeighbourWall dir="North" />
				<NeighbourWall dir="West" />
				<NeighbourWall dir="East" />
			</or>
			<not>
				<or>
					<NeighbourSameType dir="South" />
					<NeighbourWall dir="South" />
				</or>
			</not>
		</and>
		<sprite index=8  />
	</else>
	<else>
		<and>
			<or>
				<NeighbourSameType dir="North" />
				<NeighbourSameType dir="East" />
				<NeighbourSameType dir="South" />
				<NeighbourWall dir="North" />
				<NeighbourWall dir="East" />
				<NeighbourWall dir="South" />
			</or>
			<not>
				<or>
					<NeighbourSameType dir="West" />
					<NeighbourWall dir="West" />
				</or>
			</not>
		</and>
		<sprite index=9  />
	</else>
	<else>
		<and>
			<or>
				<NeighbourSameType dir="West" />
				<NeighbourSameType dir="North" />
				<NeighbourSameType dir="South" />
				<NeighbourWall dir="West" />
				<NeighbourWall dir="North" />
				<NeighbourWall dir="South" />				
			</or>
			<not>
				<or>
				<NeighbourSameType dir="East" />
				<NeighbourWall dir="East" />
				</or>
			</not>
		</and>
		<sprite index=10  />
	</else>
	<!-- default -->
	<else>
		<sprite index=0  />
	</else>
</building> 
