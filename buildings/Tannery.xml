<?xml version="1.0" ?>



<building name="Tannery" gameID="tanners_shop" file="workshop.png">

	<!-- benches block -->
	<if> 
		<and>
			<BuildingOccupancy value="3" />	
			<not><PositionIndex value=5 /></not>
		<!-- replace this with position index if required -->
		</and>
		<!-- benches -->
		<include file="wsBenches.xml"/>	
	</if>
	<else>
		<include file="wsUpperBorder.xml"/>
	</else>
	<!-- end benches block -->
	
 
	<!-- contents -->
	
	<if> 
		<and>
			<BuildingOccupancy value="3" />	
			<PositionIndex value=5 />
		</and>
		<rotate>
			<sprite index=198 />
			<sprite index=199 />
			<sprite index=198 />
			<sprite index=199 />
		</rotate>
	</if>

	<if>
		<and>
			<BuildingOccupancy value="3" />
			<not><PositionIndex value=5 /></not>
		</and>
		<include file="wsTub.xml" />
		<if>
			<PositionIndex value=0 />
			<sprite index = 157 />
		</if>		
		<else>
			<PositionIndex value=6 />
			<sprite index = 158 />
		</else>		
	</if>		
	
	<include file="ws3x3Blueprint.xml"/>
	<include file="wsLowerBorder.xml"/>
	
</building> 
