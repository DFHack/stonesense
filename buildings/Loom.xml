<?xml version="1.0" ?>



<building name="Loom" gameID="loom"  file="workshop.png"> 

	<include file="wsUpperBorder.xml"/>

	<!-- contents -->
	
	<if>
		<BuildingOccupancy value="3" />
		<rotate>
			<sprite index = 193 />
			<sprite index = 194 />
			<sprite index = 193 />
			<sprite index = 194 />
		</rotate>
	</if>		
		
	<else>
		<PositionIndex value=0 />
		<rotate>
			<sprite index = 136 offsety=2 offsetx=5/>
			<sprite index = 136 offsety=2 offsetx=-5/>
			<sprite index = 136 offsety=-4 offsetx=-7/>
			<sprite index = 136 offsety=-4 offsetx=7/>
		</rotate>
	</else>
	
	<else>
		<PositionIndex value=2 />
		<rotate>
			<sprite index = 136 offsety=-4 offsetx=-7/>
			<sprite index = 136 offsety=-4 offsetx=7/>
			<sprite index = 136 offsety=2 offsetx=5/>
			<sprite index = 136 offsety=2 offsetx=-5/>
		</rotate>
	</else>	
	
	<else>
		<PositionIndex value=3 />
		<sprite index = 162 />
	</else>

	<else>
		<PositionIndex value=8 />
		<sprite index = 190 />
	</else>	
	
	<!-- to always draw the below -->
	<if><never/>
	</if>
	<include file="ws3x3Blueprint.xml"/>
	<include file="wsLowerBorder.xml"/>
	
</building> 
